generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     String
  lojas    Loja[]
}

model Loja {
  id         Int     @id @default(autoincrement())
  nome       String
  descricao  String
  categoria  String
  link       String
  imagem     String
  visivel    Boolean @default(true)
  clienteId  Int
  cliente    User    @relation(fields: [clienteId], references: [id])

  // âœ… Campos novos
  endereco   String?
  horarioFuncionamento String?
}

